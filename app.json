{
  "id": "nl.maikvanwel.youless",
  "permissions": [
    "homey:manager:ledring"
  ],
  "name": {
      "en": "YouLess"
  },
  "version": "0.1.0",
    "compatibility": ">=0.9 || 1.x",
  "author": {
      "name": "Maik van Wel",
      "email": "m.vanwel@inproxio.eu"
  },
  "contributors": {
    "developers": [
      {
              "name": "Bas Jansen",
              "email": "bas@balotti.com"
          }
    ]
  },
  "images": {
    "large": "./assets/images/large.jpg",
    "small": "./assets/images/small.jpg"
  },
  "category": "appliances",
  "description": {
    "en": "Enables Homey to use the YouLess energy meter as a trigger",
    "nl": "Gebruik de YouLess energiemonitor als een trigger"
  },
  "dependencies": {
    "request": "*"
  },
  "speech": [
      {
          "id": "energieverbruik",
          "importance": 1,
          "triggers": {
              "en": ["energy usage"],
              "nl": ["energieverbruik", "energie verbruik"]
          }
      }
  ],
  "permissions": [
      "homey:manager:speech-output",
      "homey:manager:speech-input"
  ],
  "capabilities": {
        "meter_power": {
            "type": "number",
            "title": {
                "en": "Power Meter",
                "nl": "Stroommeter"
            },
            "units": {
                "en": "KWh",
                "nl": "KWh"
            },
            "desc": {
                "en": "Current meter total usage",
                "nl": "Huidige meter stand"
            },
            "decimals": 3,
            "getable": true,
            "setable": false
        },
        "measure_power": {
            "type": "number",
            "title": {
                "en": "Power",
                "nl": "Stroom"
            },
            "units": {
                "en": "W",
                "nl": "W"
            },
            "desc": {
                "en": "Current power (W)",
                "nl": "Huidig verbruik (W)"
            },
            "decimals": 0,
            "getable": true,
            "setable": false
        }
    },
  "drivers": [
    {
      "id": "youless",
      "mobile": {
            "components": [
                {
                    "id": "icon",
                    "capabilities": [  ]
                },
                {
                    "id": "sensor",
                    "capabilities": [ "measure_power" ]
                },
                {
                  "id": "sensor",
                  "capabilities": [ "meter_power" ]
                }
              ]
            },
      "settings": [
                        {
                            "type": "group",
                            "label": {
                                "en": "General settings",
                                "nl": "Algemene instellingen"
                            },
                            "children": [
                                {
                                    "id": "host",
                                    "type": "text",
                                    "value": "",
                                    "label": {
                                        "en": "Host",
                                        "nl": "Host"
                                    }
                                },
                                {
                            "id": "pollingrate",
                            "type": "number",
                            "value": 10,
                            "label": {
                                "en": "Polling rate in seconds (min. 5)",
                                "nl": "Polling rate in seconden (min. 5)"
                            },
                            "attr": {
                                "min": 5,
                                "max": 3600
                            }
                        }
                              ]
                            }
                          ],
      "name": {
        "en": "YouLess energy meter",
        "nl": "YouLess energiemeter"
      },
      "images": {
        "large": "drivers/youless/assets/images/large.jpg",
        "small": "drivers/youless/assets/images/small.jpg"
      },
      "class": "sensor",
      "capabilities": [ "measure_power", "meter_power" ],
      "pair": [
        {
          "id": "pair"
        }
      ]
    }
  ]
}
